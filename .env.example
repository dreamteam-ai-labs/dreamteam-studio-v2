# PostgreSQL Connection (Neon)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your-n8n-api-key

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Settings (for local development)
CLIENT_URL=http://localhost:5173

# API Keys for Balance Monitoring
OPENAI_API_KEY=sk-...
PERPLEXITY_API_KEY=pplx-...
NEON_API_KEY=neon-api-key-here
RENDER_API_KEY=rnd_...

# Optional: Set spending limits for alerts (in USD)
OPENAI_MONTHLY_LIMIT=100
PERPLEXITY_MONTHLY_LIMIT=50
NEON_MONTHLY_LIMIT=100
RENDER_MONTHLY_LIMIT=100